
<%= form_tag sign_in_path, class: "form-signin" do %>
 <h2 class="form-signin-heading">Please sign in</h2>
  <p>
    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email address"  %>
    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password"  %>
  </p>
  <%= submit_tag "Sign in", class: "btn btn-lg btn-primary btn-block" %>

  <%= link_to "Sign up", sign_up_path, class: "btn btn-lg btn-primary btn-block" %>

<% end %>

